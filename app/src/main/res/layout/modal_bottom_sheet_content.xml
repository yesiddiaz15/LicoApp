<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/standard_bottom_sheet"
        style="@style/ModalBottomSheetDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/add_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="13dp"
                android:text="Add"
                android:textColor="@color/gold"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/image_cancel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/ic_round_clear_24" />

            <LinearLayout
                android:id="@+id/inventory_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/add_text"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="13dp">

                <ImageView
                    android:id="@+id/image_inventory"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/ic_list_gold" />

                <TextView
                    android:id="@+id/add_inventory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_toEndOf="@id/image_inventory"
                    android:text="Inventory"
                    android:textColor="@color/gold"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/shipping_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/inventory_container"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="13dp">

                <ImageView
                    android:id="@+id/image_shipping"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/ic_shipping_gold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:text="Shipping"
                    android:textColor="@color/gold"
                    android:textSize="17sp" />

            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>